@article{kavanagh2021planetinduced,
	title = {Planet-induced radio emission from the coronae of {M} dwarfs: the case of {Prox} {Cen} and {AU} {Mic}},
	volume = {504},
	issn = {0035-8711},
	shorttitle = {Planet-induced radio emission from the coronae of {M} dwarfs},
	url = {https://ui.adsabs.harvard.edu/abs/2021MNRAS.504.1511K},
	doi = {10.1093/mnras/stab929},
	abstract = {There have recently been detections of radio emission from low-mass stars, some of which are indicative of star-planet interactions. Motivated by these exciting new results, in this paper we present Alfvén wave-driven stellar wind models of the two active planet-hosting M dwarfs Prox Cen and AU Mic. Our models incorporate large-scale photospheric magnetic field maps reconstructed using the Zeeman-Doppler imaging method. We obtain a mass-loss rate of \$0.25{\textasciitilde}{\textbackslash}dot\{{\textbackslash}mathrm\{ M\}\}\_\{{\textbackslash}odot \}\$ for the wind of Prox Cen. For the young dwarf AU Mic, we explore two cases: a low and a high mass-loss rate. Depending on the properties of the Alfvén waves that heat the corona in our wind models, we obtain mass-loss rates of 27 and \$590{\textasciitilde}{\textbackslash}dot\{{\textbackslash}mathrm\{ M\}\}\_\{{\textbackslash}odot \}\$ for AU Mic. We use our stellar wind models to assess the generation of electron cyclotron maser instability emission in both systems, through a mechanism analogous to the sub-Alfvénic Jupiter-Io interaction. For Prox Cen, we do not find any feasible scenario where the planet can induce radio emission in the star's corona, as the planet orbits too far from the star in the super-Alfvénic regime. However, in the case that AU Mic has a stellar wind mass-loss rate of \$27{\textasciitilde}{\textbackslash}dot\{{\textbackslash}mathrm\{ M\}\}\_\{{\textbackslash}odot \}\$, we find that both planets b and c in the system can induce radio emission from {\textasciitilde}10 MHz to 3 GHz in the corona of the host star for the majority of their orbits, with peak flux densities of {\textasciitilde}10 mJy. Detection of such radio emission would allow us to place an upper limit on the mass-loss rate of the star.},
	urldate = {2021-10-22},
	journal = {Monthly Notices of the Royal Astronomical Society},
	author = {Kavanagh, Robert D. and Vidotto, Aline A. and Klein, Baptiste and Jardine, Moira M. and Donati, Jean-François and Ó Fionnagáin, Dúalta},
	month = jun,
	year = {2021},
	note = {ADS Bibcode: 2021MNRAS.504.1511K},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - Solar and Stellar Astrophysics, AU Microscopii, outflows, radio continuum: planetary systems, stars: individual: Proxima Centauri, stars: magnetic field, stars: mass-loss, stars: winds},
	pages = {1511--1518},
	file = {kavanagh2021planetinduced.pdf:/home/ilin/Documents/Papers/Kavanagh/kavanagh2021planetinduced.pdf:application/pdf},
}

@article{lanza2012starplanet,
	title = {Star-planet magnetic interaction and activity in late-type stars with close-in planets},
	volume = {544},
	issn = {0004-6361},
	url = {https://ui.adsabs.harvard.edu/abs/2012A&A...544A..23L/abstract},
	doi = {10.1051/0004-6361/201219002},
	abstract = {Context. Late-type stars interact with their close-in planets through their coronal magnetic fields. {\textless}BR /{\textgreater} Aims: We introduce a theory for the interaction between the stellar and planetary fields focussing on the processes that release magnetic energy in the stellar coronae. {\textless}BR /{\textgreater} Methods: We consider the energy dissipated by the reconnection between the stellar and planetary magnetic fields as well as that made available by the modulation of the magnetic helicity of the coronal field produced by the orbital motion of the planet. We estimate the powers released by both processes in the case of axisymmetric and non-axisymmetric, linear and non-linear force-free coronal fields finding that they scale as B{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater}{\textless}SUP{\textgreater}4/3{\textless}/SUP{\textgreater} B{\textless}SUB{\textgreater}p0{\textless}/SUB{\textgreater}{\textless}SUP{\textgreater}2/3{\textless}/SUP{\textgreater} R{\textless}SUB{\textgreater}p{\textless}/SUB{\textgreater}{\textless}SUP{\textgreater}2{\textless}/SUP{\textgreater} v{\textless}SUB{\textgreater}rel{\textless}/SUB{\textgreater}, where B{\textless}SUB{\textgreater}0{\textless}/SUB{\textgreater} is the mean stellar surface field, B{\textless}SUB{\textgreater}p0{\textless}/SUB{\textgreater} the planetary field at the poles, R{\textless}SUB{\textgreater}p{\textless}/SUB{\textgreater} the radius of the planet, and v{\textless}SUB{\textgreater}rel{\textless}/SUB{\textgreater} the relative velocity between the stellar and the planetary fields. {\textless}BR /{\textgreater} Results: A chromospheric hot spot or a flaring activity phased to the orbital motion of the planet are found only when the stellar field is axisymmetric. In the case of a non-axisymmetric field, the time modulation of the energy release is multiperiodic and can be easily confused with the intrinsic stellar variability. We apply our theory to the systems with some reported evidence of star-planet magnetic interaction finding a dissipated power at least one order of magnitude smaller than that emitted by the chromospheric hot spots. The phase lags between the planets and the hot spots are reproduced by our models in all the cases except for υ And. {\textless}BR /{\textgreater} Conclusions: The chromospheric hot spots rotating in phase with the planets cannot be explained by the energy dissipation produced by the interaction between stellar and planetary fields as considered by our models and require a different mechanism.},
	language = {en},
	urldate = {2022-03-14},
	journal = {Astronomy and Astrophysics},
	author = {Lanza, A. F.},
	month = aug,
	year = {2012},
	pages = {A23},
	file = {lanza2012starplanet.pdf:/home/ilin/Documents/Papers/Lanza/lanza2012starplanet.pdf:application/pdf;Snapshot:/home/ilin/Zotero/storage/G6BRYIMG/abstract.html:text/html},
}

