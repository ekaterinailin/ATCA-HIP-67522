	author = {Callingham, J. R. and Vedantham, H. K. and Shimwell, T. W. and Pope, B. J. S. and Davis, I. E. and Best, P. N. and Hardcastle, M. J. and Rottgering, H. J. A. and Sabater, J. and Tasse, C. and van Weeren, R. J. and Williams, W. L. and Zarka, P. and de Gasperin, F. and Drabent, A.},
	month = dec,
	year = {2021},
	note = {arXiv: 2110.03713},
	keywords = {Astrophysics - Earth and Planetary Astrophysics, Astrophysics - High Energy Astrophysical Phenomena, Astrophysics - Solar and Stellar Astrophysics},
	pages = {1233--1239},
	file = {arXiv.org Snapshot:/home/ilin/Zotero/storage/VSYA6B65/2110.html:text/html;callingham2021population.pdf:/home/ekaterina/Documents/004_studies/Literature/Papers/Callingham/callingham2021population.pdf:application/pdf},
